    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const browseBtn = document.getElementById('browseBtn');
        const qualitySlider = document.getElementById('qualitySlider');
        const qualityValue = document.getElementById('qualityValue');
        const formatOptions = document.querySelectorAll('.format-option');
        const compressBtn = document.getElementById('compressBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const resetBtn = document.getElementById('resetBtn');
        const previewContainer = document.getElementById('previewContainer');
        const loading = document.getElementById('loading');
        const originalCanvas = document.getElementById('originalCanvas');
        const compressedCanvas = document.getElementById('compressedCanvas');
        const originalSize = document.getElementById('originalSize');
        const originalDimensions = document.getElementById('originalDimensions');
        const compressedSize = document.getElementById('compressedSize');
        const compressedDimensions = document.getElementById('compressedDimensions');
        const savings = document.getElementById('savings');
        
        // State variables
        let originalImage = null;
        let compressedImageBlob = null;
        let selectedFormat = 'original';
        let originalFileSize = 0;
        let compressedFileSize = 0;
        
        // Event Listeners
        browseBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        uploadArea.addEventListener('dragover', handleDragOver);
        uploadArea.addEventListener('drop', handleFileDrop);
        qualitySlider.addEventListener('input', updateQualityValue);
        compressBtn.addEventListener('click', compressImage);
        downloadBtn.addEventListener('click', downloadImage);
        resetBtn.addEventListener('click', resetTool);
        
        // Format selection
        formatOptions.forEach(option => {
            option.addEventListener('click', () => {
                formatOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                selectedFormat = option.dataset.format;
            });
        });
        
        // Functions
        function handleDragOver(e) {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary)';
            uploadArea.style.backgroundColor = 'rgba(67, 97, 238, 0.05)';
        }
        
        function handleFileDrop(e) {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--gray-light)';
            uploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                handleImageFile(e.dataTransfer.files[0]);
            }
        }
        
        function handleFileSelect(e) {
            if (e.target.files.length) {
                handleImageFile(e.target.files[0]);
            }
        }
        
        function handleImageFile(file) {
            // Check if file is an image
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPG, PNG, WebP, etc.)');
                return;
            }
            
            // Check file size (limit to 5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('File size exceeds 5MB limit. Please choose a smaller image.');
                return;
            }
            
            // Reset tool state
            resetTool();
            
            // Store original file size
            originalFileSize = file.size;
            
            // Load and display image
            const reader = new FileReader();
            reader.onload = function(e) {
                originalImage = new Image();
                originalImage.onload = function() {
                    displayOriginalImage();
                    previewContainer.style.display = 'block';
                    compressBtn.disabled = false;
                };
                originalImage.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
        
        function displayOriginalImage() {
            const ctx = originalCanvas.getContext('2d');
            
            // Calculate display dimensions (max 400px width/height for preview)
            let displayWidth = originalImage.width;
            let displayHeight = originalImage.height;
            const maxDimension = 400;
            
            if (displayWidth > maxDimension || displayHeight > maxDimension) {
                const ratio = Math.min(maxDimension / displayWidth, maxDimension / displayHeight);
                displayWidth = Math.floor(displayWidth * ratio);
                displayHeight = Math.floor(displayHeight * ratio);
            }
            
            // Set canvas dimensions
            originalCanvas.width = displayWidth;
            originalCanvas.height = displayHeight;
            
            // Draw image on canvas
            ctx.drawImage(originalImage, 0, 0, displayWidth, displayHeight);
            
            // Update stats
            originalSize.textContent = formatFileSize(originalFileSize);
            originalDimensions.textContent = `${originalImage.width} √ó ${originalImage.height}`;
        }
        
        function updateQualityValue() {
            const value = qualitySlider.value;
            qualityValue.textContent = `${value}%`;
        }
        
        function compressImage() {
            if (!originalImage) {
                alert('Please upload an image first.');
                return;
            }
            
            // Show loading state
            loading.style.display = 'block';
            compressBtn.disabled = true;
            
            // Use setTimeout to allow UI to update before compression
            setTimeout(() => {
                const quality = parseInt(qualitySlider.value) / 100;
                
                // Determine output format
                let outputFormat = selectedFormat === 'original' ? 'image/jpeg' : `image/${selectedFormat}`;
                if (selectedFormat === 'jpeg') outputFormat = 'image/jpeg';
                
                // Set compression quality (only applies to JPEG and WebP)
                const qualityParam = outputFormat === 'image/png' ? 1.0 : quality;
                
                // Create compressed image
                compressedCanvas.width = originalImage.width;
                compressedCanvas.height = originalImage.height;
                const ctx = compressedCanvas.getContext('2d');
                ctx.drawImage(originalImage, 0, 0);
                
                // Convert canvas to blob with specified quality
                compressedCanvas.toBlob(function(blob) {
                    // Hide loading state
                    loading.style.display = 'none';
                    compressBtn.disabled = false;
                    
                    if (!blob) {
                        alert('Compression failed. Please try again.');
                        return;
                    }
                    
                    compressedImageBlob = blob;
                    compressedFileSize = blob.size;
                    
                    // Display compressed image
                    const compressedImg = new Image();
                    compressedImg.onload = function() {
                        const displayCtx = compressedCanvas.getContext('2d');
                        
                        // Calculate display dimensions (same as original preview)
                        let displayWidth = originalImage.width;
                        let displayHeight = originalImage.height;
                        const maxDimension = 400;
                        
                        if (displayWidth > maxDimension || displayHeight > maxDimension) {
                            const ratio = Math.min(maxDimension / displayWidth, maxDimension / displayHeight);
                            displayWidth = Math.floor(displayWidth * ratio);
                            displayHeight = Math.floor(displayHeight * ratio);
                        }
                        
                        // Set canvas dimensions
                        compressedCanvas.width = displayWidth;
                        compressedCanvas.height = displayHeight;
                        
                        // Draw compressed image
                        displayCtx.drawImage(compressedImg, 0, 0, displayWidth, displayHeight);
                        
                        // Update stats
                        compressedSize.textContent = formatFileSize(compressedFileSize);
                        compressedDimensions.textContent = `${originalImage.width} √ó ${originalImage.height}`;
                        
                        const reduction = 100 - Math.round((compressedFileSize / originalFileSize) * 100);
                        savings.textContent = `${reduction}% smaller`;
                        savings.style.color = reduction > 0 ? 'var(--success)' : 'var(--danger)';
                        
                        // Show download button
                        downloadBtn.style.display = 'flex';
                    };
                    
                    compressedImg.src = URL.createObjectURL(blob);
                }, outputFormat, qualityParam);
            }, 100);
        }
        
        function downloadImage() {
            if (!compressedImageBlob) {
                alert('No compressed image available. Please compress an image first.');
                return;
            }
            
            // Create download link
            const url = URL.createObjectURL(compressedImageBlob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `compressed-image.${selectedFormat === 'jpeg' ? 'jpg' : selectedFormat === 'original' ? 'jpg' : selectedFormat}`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            // Update stats (simulate)
            updateStats();
        }
        
        function resetTool() {
            // Reset UI
            previewContainer.style.display = 'none';
            loading.style.display = 'none';
            downloadBtn.style.display = 'none';
            compressBtn.disabled = false;
            
            // Reset state
            originalImage = null;
            compressedImageBlob = null;
            originalFileSize = 0;
            compressedFileSize = 0;
            
            // Reset file input
            fileInput.value = '';
            
            // Reset sliders and options
            qualitySlider.value = 80;
            updateQualityValue();
            
            formatOptions.forEach(opt => opt.classList.remove('active'));
            document.querySelector('.format-option[data-format="original"]').classList.add('active');
            selectedFormat = 'original';
            
            // Clear canvases
            const ctx1 = originalCanvas.getContext('2d');
            const ctx2 = compressedCanvas.getContext('2d');
            ctx1.clearRect(0, 0, originalCanvas.width, originalCanvas.height);
            ctx2.clearRect(0, 0, compressedCanvas.width, compressedCanvas.height);
            
            // Reset stats
            originalSize.textContent = '--';
            originalDimensions.textContent = '--';
            compressedSize.textContent = '--';
            compressedDimensions.textContent = '--';
            savings.textContent = '--';
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        function updateStats() {
            // In a real implementation, this would update from server-side statistics
            // For demo purposes, we'll simulate some incremental updates
            const statsCount = document.getElementById('statsCount');
            const statsSaved = document.getElementById('statsSaved');
            const statsAvg = document.getElementById('statsAvg');
            
            // Get current values
            let count = parseInt(statsCount.textContent.replace(',', '')) || 1247;
            let saved = parseFloat(statsSaved.textContent) || 2.1;
            let avg = parseInt(statsAvg.textContent) || 68;
            
            // Increment values
            count += 1;
            saved += compressedFileSize > 0 ? (originalFileSize - compressedFileSize) / (1024*1024*1024) : 0.001;
            avg = Math.min(95, Math.max(avg, Math.round((avg * 0.99) + (0.01 * (100 - Math.round((compressedFileSize / originalFileSize) * 100))))));
            
            // Update display
            statsCount.textContent = count.toLocaleString();
            statsSaved.textContent = saved.toFixed(1) + ' GB';
            statsAvg.textContent = avg + '%';
        }
        
        // Initialize quality value display
        updateQualityValue();
        
        // Initialize tooltips for format options
        formatOptions.forEach(option => {
            let tooltipText = '';
            switch(option.dataset.format) {
                case 'original': tooltipText = 'Keep original format'; break;
                case 'jpeg': tooltipText = 'Best for photos'; break;
                case 'png': tooltipText = 'Best for graphics with transparency'; break;
                case 'webp': tooltipText = 'Modern format with best compression'; break;
            }
            option.title = tooltipText;
        });
        
        // Initialize with a sample image for demo purposes
        window.addEventListener('load', function() {
            // Create a sample image for demonstration
            const sampleImage = new Image();
            sampleImage.onload = function() {
                // Simulate a file upload for demo
                originalImage = sampleImage;
                originalFileSize = 450000; // Simulated 450KB file size
                displayOriginalImage();
                previewContainer.style.display = 'block';
                compressBtn.disabled = false;
                
                // Add a note about the demo
                const demoNote = document.createElement('div');
                demoNote.style.cssText = 'background-color: #e7f3ff; color: #0066cc; padding: 12px; border-radius: 8px; margin-top: 20px; font-size: 14px;';
                demoNote.innerHTML = '<strong>Demo Mode:</strong> A sample image is loaded. Upload your own image or adjust compression settings to see how the tool works.';
                document.querySelector('.compression-tool').appendChild(demoNote);
            };
            // Use a placeholder image URL
            sampleImage.src = 'data:image/svg+xml;base64,';
        });
    </script>
</body>
</html>
